<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<xsd:schema xmlns:liang="http://www.BriLiang/schema/hello" targetNamespace="http://www.BriLiang/schema/hello"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xsd:import namespace="http://www.w3.org/XML/1998/namespace"/>
    <xsd:element name="lastName" type="xsd:string"/>

    <xsd:element name="age">
        <xsd:simpleType>
            <xsd:restriction base="xsd:integer">
                <xsd:maxInclusive value="120"/>
                <xsd:minInclusive value="0"/>
            </xsd:restriction>
        </xsd:simpleType>
    </xsd:element>

    <xsd:element name="dateBorn" type="xsd:date"/>

    <xsd:attribute name="lang" type="xsd:string" default="CN"/>

    <xsd:element name="color" type="xsd:string" default="red"/>


    <xsd:element name="car" type="carType">

    </xsd:element>

    <xsd:simpleType name="carType">
        <xsd:restriction base="xsd:string">
            <xsd:enumeration value="Audi"/>
            <xsd:enumeration value="Golf"/>
            <xsd:enumeration value="BMW"/>
        </xsd:restriction>
    </xsd:simpleType>
    <xsd:element name="letter" type="letterType"/>

    <xsd:simpleType name="letterType">
        <xsd:restriction base="xsd:string">
            <xsd:pattern value="([a-z])*"/>
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:element name="address">
        <xsd:simpleType>
            <xsd:restriction base="xsd:string">
                <xsd:whiteSpace value="replace"/>
            </xsd:restriction>
        </xsd:simpleType>
    </xsd:element>
    <!--复合元素例子-->
    <xsd:element name="employee" type="liang:fullPersonInfo">

    </xsd:element>
    <xsd:complexType name="personInfo">
        <xsd:annotation>
            <xsd:documentation>
                <![CDATA[
	                    employee explain
					]]>
            </xsd:documentation>
        </xsd:annotation>
        <xsd:sequence>
            <xsd:element name="firstName" type="xsd:string">
            </xsd:element>
            <xsd:element name="lastName" type="xsd:string"/>
        </xsd:sequence>
        <xsd:attribute name="fistNameDetail" type="xsd:string">
            <xsd:annotation>
                <xsd:documentation>
                    <![CDATA[employee explain default pattern]]>
                </xsd:documentation>
            </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="default" type="xsd:string">
            <xsd:annotation>
                <xsd:documentation>
                    <![CDATA[employee explain default pattern]]>
                </xsd:documentation>
            </xsd:annotation>
        </xsd:attribute>
    </xsd:complexType>

    <xsd:complexType name="fullPersonInfo">
        <xsd:complexContent>
            <xsd:extension base="liang:personInfo">
                <xsd:sequence>
                    <xsd:element ref="liang:shoesize"/>
                    <xsd:element name="address" type="xsd:string" minOccurs="0" maxOccurs="2"/>
                    <xsd:element name="city" type="xsd:string" maxOccurs="unbounded"/>
                    <xsd:element name="country" type="liang:country"/>
                </xsd:sequence>
            </xsd:extension>
        </xsd:complexContent>
    </xsd:complexType>
    <!--定义country的正则表达式-->
    <xsd:complexType name="country">
        <xsd:attribute name="default">
            <xsd:simpleType>
                <xsd:restriction base="xsd:string">
                    <xsd:pattern value="[a-z]"/>
                </xsd:restriction>
            </xsd:simpleType>
        </xsd:attribute>
    </xsd:complexType>

    <!--"shoesize"，其中仅包含文本：-->
    <xsd:element name="shoesize">
        <xsd:complexType>
            <xsd:simpleContent>
                <xsd:extension base="xsd:decimal">
                    <xsd:attribute name="sizing">
                        <xsd:simpleType>
                            <xsd:restriction base="xsd:string">
                                <xsd:enumeration value="US"/>
                                <xsd:enumeration value="European"/>
                                <xsd:enumeration value="UK"/>
                                <xsd:enumeration value="Japan"/>
                            </xsd:restriction>
                        </xsd:simpleType>
                    </xsd:attribute>
                </xsd:extension>
            </xsd:simpleContent>
        </xsd:complexType>
    </xsd:element>


</xsd:schema>